generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EmailLog {
  id                 String   @id @default(cuid())
  to                 String
  subject            String
  html               String
  status             String   // "SENT" | "FAILED"
  providerMessageId  String?
  error              String?
  createdAt          DateTime @default(now())
}